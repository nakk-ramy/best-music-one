<%= render "shared/header" %>
<div class='main'>

  <%# 画面上部の帯部分 %>
  <div class='title-contents'>
    <h2 class='service-title'>
      What's your Best Music ?
    </h2>
    <p class='service-explain'>
      好きな曲を好きなだけ
    </p>
    <p class='service-explain'>
      共有できます
    </p>
  </div>
  <%# /画面上部の帯部分 %>

  <%# 楽曲一覧 %>
  <div class='song-contents'>
    <h2 class='title'>ピックアップカテゴリー</h2>
    <div class="subtitle" >
      新規投稿曲
    </div>
    <ul class='song-lists'>

      <% if @songs.present? %>
     <% @songs.each do |song| %> 
      <li class='list'>
        <%= link_to song_path(song.id) do %>
        <div class='song-img-content'>
          <%= image_tag song.image, class: "song-img" %>
        </div>
        <div class='song-info'>
          <h3 class='song-name'>
            <%= song.title %>
          </h3>
           <% end %>
          <div class='song-etc'>
            <span><%= song.artist %><br><%= song.genre %></span>
            <% if user_signed_in? %>
            <div id="favorites_buttons_<%= song.id %>">
              <%= render partial: 'favorites/favorite', locals: { song: song } %>
            </div>
            <% end %>
          </div>
          <div class='song-user'>
            <%= link_to User.find(song.user_id).nickname, user_path(song.user_id), class: "user-nickname" %>
          </div>
        </div>
      </li>
     <% end %>
      <% else %>
      <li class='list'>
        <%= link_to '#' do %>
        <%= image_tag "https://tech-master.s3.amazonaws.com/uploads/curriculums/images/Rails1-4/sample.jpg", class: "item-img" %>
        <div class='item-info'>
          <h3 class='item-name'>
            好きな曲を入れてね！
          </h3>
          <div class='item-price'>
            <span>アーティスト名<br>ジャンル</span>
          </div>
        </div>
        <% end %>
      </li>
    <% end %>
    </ul>
  </div>
  <%# /楽曲一覧 %>
</div>
<%= link_to(new_song_path, class: 'purchase-btn') do %>
  <span class='purchase-btn-text'>投稿する</span>
  <%= image_tag 'icon_music.png' , size: '185x50' ,class: "purchase-btn-icon" %>
<% end %>
<%= render "shared/footer" %>