<%= render "shared/second-header"%>

<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Create Account</h2>
      <h5>新規アカウントの作成</h5>
      <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post do%>
      <i class="fa fa-google" aria-hidden="true"></i>
        <span>登録</span>
      <% end %>
      <%= link_to user_twitter_omniauth_authorize_path, method: :post do%>
      <i class="fa fa-twitter" aria-hidden="true"></i>
        <span>登録</span>
      <% end %>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f|%>
        <%= render 'shared/error_messages', model: f.object %>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :ニックネーム%>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.text_field :nickname, class:"input-default", id:"nickname", maxlength:"40", placeholder:"例) music太郎" ,autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :メールアドレス%>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可"%>
          </div>
        </div>
        <%if @sns_id.present? %>
          <%= hidden_field_tag :sns_auth, true %>
        <% else %>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :パスワード%>
            <i>(英数字6文字以上)</i>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字"%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :パスワード（確認）%>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい"%>
          </div>
        </div>
        <% end %>
        <div class='actions'>
          <%= f.submit "ユーザー登録", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render "shared/second-footer"%>
